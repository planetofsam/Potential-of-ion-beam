def calculate(Energy,Current,Bd,Td,Mass):
    import numpy as np
    import matplotlib.pyplot as plt
    import myfunctions as mf
#    Current=Current # in micro Amps
#    BeamDiameter=Bd# in mm
#    Energy=Energy # in eV
